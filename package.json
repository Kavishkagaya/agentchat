{
  "name": "axon",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "dev:web": "pnpm --filter @axon/web dev",
    "dev:orchestrator": "pnpm --filter @axon/orchestrator dev",
    "dev:agents": "pnpm --filter @axon/agents dev",
    "dev:group-controller": "pnpm --filter @axon/group-controller dev",
    "build": "pnpm -r build",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "fix": "ultracite fix",
    "check": "biome check . --write",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "ultracite": "^7.2.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.1"
  }
}
